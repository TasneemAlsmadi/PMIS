
@using BMISBLayer.Entities
@model PaymentTerm


@{
    ViewData["Title"] = "Edit Payment term";
}
<script>
    $(function () {
        $("#PaymentTermDate").datepicker({ altformat: "yy-mm-dd" });

    });

</script>

<form action="/PaymentTerm/UpdatePaymentTerm" method="post" enctype="multipart/form-data">

    @Html.HiddenFor(x => x.DeliverableId)

    @Html.HiddenFor(x => x.PaymentTermId)


    <div class="border p-3">

        <div class="row form-group">
            <h2 class="text-black-50 pl-3">Edit payment term</h2>
        </div>
        <hr />

        <div class="form-group">
            <label> PaymentTerm Name</label>
            <input asp-for="PaymentTermTitle" value="@Model.PaymentTermTitle" />
            <span asp-validation-for="PaymentTermTitle" class="text-danger"></span>

        </div>
        <div class="form-group">
            <label> PaymentTerm Amount</label>
            <input asp-for="PaymentTermAmount" value="@Model.PaymentTermAmount" />
            <span asp-validation-for="PaymentTermAmount" class="text-danger"></span>
            @if (ViewBag.error == false)
            {
                <span class="text-danger">  The PaymentTerm Amount is greater than Project Amount.</span>


            }
        </div>
        <div class="form-group">
            <label> PaymentTerm Date</label>
            <input id="PaymentTermDate" name="PaymentTermDate" value="@Model.PaymentTermDate" />
            <span asp-validation-for="PaymentTermDate" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-75" value="Update" />
                </div>
                <div class="col">
                    <a asp-controller="Project" asp-action="Index" class="btn btn-danger w-75">Back</a>
                </div>
            </div>

        </div>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}