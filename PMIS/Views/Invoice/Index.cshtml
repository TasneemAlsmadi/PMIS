
@using BMISBLayer.Entities
@model Invoice


<a class="btn btn-primary" href="/Invoice/NewInvoice">Create New Invoice</a>
<div class="table-responsive">
    <table id="myTable" class="table table-bordered" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceTitle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceDate)
                </th>


                <th>
                    @Html.DisplayNameFor(model => model.Project)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in (List<Invoice>)ViewBag.Invoice)
            {
                
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Project.ProjectName)
                </td>

                <td>
                    <a class="text-success" href="/Invoice/EditInvoice?InvoiceId=@item.InvoiceId"><i class="fa-regular fa-pen-to-square"></i></a> |
                    <a href="/Invoice/Index1?InvoiceId=@item.InvoiceId">View Invoice</a>|
                    <a class="text-danger" href="/Invoice/DeleteInvoice?InvoiceId=@item.InvoiceId"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
                
            }
        </tbody>
    </table>
</div>
@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jq-3.6.0/dt-1.12.1/b-2.2.3/fc-4.1.0/sc-2.0.6/sb-1.3.3/sp-2.0.1/sl-1.4.0/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>


}

